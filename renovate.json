{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "America/Edmonton",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "commitBodyTable": true,
  "rebaseWhen": "auto",
  "platformCommit": "enabled",
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/kustomization\\.ya?ml$/",
      "/\\.yaml$/"
    ]
  },
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "managers": [
        "flux",
        "kubernetes",
        "kustomize"
      ],
      "additionalBranchPrefix": "{{parentDir}}-",
      "packagePatterns": [
        ".*"
      ],
      "separateMajorMinor": true,
      "prTitle": "[{{parentDir}}] {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}"
    }
  ]
}
