{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "America/Edmonton",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "commitBodyTable": true,
  "rebaseWhen": "auto",
  "platformCommit": "enabled",
  "flux": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml(?:\\.j2)?$/"
    ]
  },
  "kustomize": {
    "managerFilePatterns": [
      "/kustomization\\.ya?ml$/",
      "/\\.yaml$/"
    ]
  },
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "managers": [
        "flux",
        "kubernetes",
        "kustomize"
      ],
      "additionalBranchPrefix": "{{parentDir}}-v{{currentMajor}}-",
      "packagePatterns": [
        ".*"
      ],
      "separateMajorMinor": true,
      "prTitle": "[{{parentDir}}] {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}"
    },
    {
      //Explicitly pin the v17 track so it doesn't try to go to v18
      "matchPackageNames": [
        "ghcr.io/cloudnative-pg/postgresql"
      ],
      "matchCurrentVersion": "/^17\\./",
      "allowedVersions": "< 18.0.0"
    }
  ]
}
