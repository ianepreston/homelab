{
  "packageRules": [
    {
      "matchPaths": ["k8s/dev/**"],
      "extends": ["config.recommended"],
      "groupName": "K8s Dev cluster"
    },
    {
      "matchPaths": ["k8s/prod/**"],
      "extends": ["config.recommended"],
      "groupName": "K8s Prod cluster"
    },
    {
      "matchPaths": ["ansible/**"],
      "extends": ["config.recommended"],
      "groupName": "Ansible (VM config)"
    }
  ]
}
